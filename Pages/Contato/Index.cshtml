@page
@model sistema_quinta_do_ypua.Pages_Contato.IndexModel

@{
    ViewData["Title"] = "Contatos Recebidos";
}

<h1>Contatos Recebidos</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Contato[0].Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contato[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contato[0].Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contato[0].Mensagem)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Contato) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mensagem)
            </td>
            <td>
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
